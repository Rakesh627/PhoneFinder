<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/secondary_text_default_material_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please enter credentials of the phone you wish to find"
        android:id="@+id/txt_findphone_signup"
        android:layout_weight="0.07" />

    <TextView
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/txt_findphone_un" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText" />

    <TextView
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/txt_findphone_pwd"
        android:layout_weight="0.03" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2" />

    <Button
        android:id="@+id/findPhoneLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="Sign In"
        android:layout_weight="0.07" />

</LinearLayout>